    <MudNavLink Href="/" Match="NavLinkMatch.All"><MudText>Dashboard</MudText></MudNavLink>
    <MudNavLink Href="/virtualmachines"><MudText>Máquinas Virtuais</MudText></MudNavLink>
    <MudNavLink Href="/robos"><MudText>Robos</MudText></MudNavLink>
    <MudNavLink Href="/legados"><MudText>Legados</MudText></MudNavLink>
</MudNavMenu>

@code
{
    [Parameter] public bool IsDarkMode { get; set; }
    private string LogoPath => IsDarkMode  ? "images/Vivo_White_Logo.png" : "images/Vivo_Purple_Logo.png";
}


